{
  "name": "copus",
  "displayName": "Copus",
  "description": "MCP swarm development pipeline â€” real-time cost analytics, Opus vs MiniMax routing, and integrated skill chain for Claude Code.",
  "version": "0.2.0",
  "publisher": "rodrigo-specter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodcoding123/Copus.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "llm",
    "swarm",
    "cost",
    "analytics",
    "claude",
    "opus",
    "tokens"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copus.openDashboard",
        "title": "Copus: Open Dashboard"
      },
      {
        "command": "copus.configure",
        "title": "Copus: Configure MCP Server & Skills"
      },
      {
        "command": "copus.setApiKey",
        "title": "Copus: Set MiniMax API Key"
      },
      {
        "command": "copus.installSkills",
        "title": "Copus: Install/Update Skills"
      }
    ],
    "configuration": {
      "title": "Copus",
      "properties": {
        "copus.usageFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to llm-swarm-usage.json. Leave empty to use default (~/.claude/llm-swarm-usage.json)."
        },
        "copus.refreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "Polling interval in seconds (fallback when file watcher misses changes)."
        },
        "copus.opusPricing": {
          "type": "object",
          "default": {
            "inputPerMillion": 15,
            "outputPerMillion": 75
          },
          "properties": {
            "inputPerMillion": {
              "type": "number",
              "description": "Opus input price per million tokens (USD)"
            },
            "outputPerMillion": {
              "type": "number",
              "description": "Opus output price per million tokens (USD)"
            }
          },
          "description": "Opus pricing for cost comparison calculations."
        },
        "copus.warningThreshold": {
          "type": "number",
          "default": 80,
          "minimum": 50,
          "maximum": 99,
          "description": "Percentage of prompts used before showing warning indicator."
        },
        "copus.autoConfigureOnActivation": {
          "type": "boolean",
          "default": true,
          "description": "Automatically configure MCP server and install skills on activation."
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "chart.js": "^4.5.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0",
    "zod": "^3.24.0"
  }
}
